  <title></title>
</head>
<body>
  <div class="container message">
    <!--link para cerrar sesión-->
    <% if session[:user_id] %>
      <p><a href="/logout">Cierra Sesión</a></p>
    <% end %>
    <!--mensaje de error-->
    <% if session[:errors] %>
      <p><%= session[:errors] %></p>
      <% session[:errors].clear %>
    <% end %>
  </div>
    <%= yield %>
  <script src="/js/application.js"></script>
</body>
</html>

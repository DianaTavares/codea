<div class="row jumbotron">
  <h1>Bienvenido a Blog Anónimo</h1>
  <div class="col-md-6">
    <a href="/new_post" class="btn btn-success btn-lg btn-block">Nuevo Post</a>
  </div>
  <div class="col-md-6">
    <a href="/tags" class="btn btn-info btn-lg btn-block">Ver Tags</a>
  </div>
</div>

<div class="row">
  <% if @posts %>
    <% @posts.each do |post| %>
      <div class="thumbnail">
        <div class="caption">
          <h3>Título: <%= post.title %></h3>
          <p>Contenido: <%= post.body %></p>
          <p>Autor: <%= post.author %></p>
          <p>Creado: <%= post.created_at.strftime('%Y-%m-%d') %></p>
          <p>
            <% post.tags.each do |tag| %>
              <a href="/tags/<%= tag.name %>" class="label label-info"><%= tag.name %></a>
            <% end %>
          </p>
          <p><a href="/post/<%= post.id %>" class="btn btn-primary" role="button">Ver Post</a></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="thumbnail">
      <div class="caption">
        <h3>TÃ­tulo: <%= @post.title %></h3>
        <p>Contenido: <%= @post.body %></p>
        <p>Autor: <%= @post.author %></p>
        <p>Creado: <%= @post.created_at.strftime('%Y-%m-%d') %></p>
        <p>
          <% @post.tags.each do |tag| %>
            <a href="/tags/<%= tag.name %>" class="label label-info"><%= tag.name %></a>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <a href="/post/<%= @post.id %>/edit" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
  </div>
  <div class="col-md-6">
    <a href="/delete_post/<%= @post.id %>" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
  </div>
</div>
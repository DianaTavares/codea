<div class="row">
  <div class="col-md-12">
    <% @tags.each do |tag| %>
      <a href="/tags/<%=tag.name%>"><span class="label label-info label-lg"><%= tag.name %></span></a>
    <% end %>
  </div>
</div>


<div class="row">
  <% if @posts %>
    <% @posts.each do |post| %>
      <div class="thumbnail">
        <div class="caption">
          <h3>TÃ­tulo: <%= post.title %></h3>
          <p>Contenido: <%= post.body %></p>
          <p>Autor: <%= post.author %></p>
          <p>Creado: <%= post.created_at.strftime('%Y-%m-%d') %></p>
          <p> <%= post.tags.pluck(:name).join(', ') %></p>
          <p>
            <% post.tags.each do |tag| %>
              <a href="/tags/<%= tag.name %>" class="label label-info"><%= tag.name %></a>
            <% end %>
          </p>
          <p><a href="/post/<%= post.id %>" class="btn btn-primary" role="button">Ver Post</a></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>